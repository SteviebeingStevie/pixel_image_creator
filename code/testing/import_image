from PIL import Image


def load_image(image_path):
    """
    Lädt ein Bild von einem Pfad und gibt das Bildobjekt zurück.
    
    Arguments:
    image_path -- Pfad des Bildes
    """
    try:
        # Bild einlesen
        image = Image.open(image_path)
        return image
    except FileNotFoundError:
        print("Datei nicht gefunden.")
        return None
    except Exception as e:
        print(f"Fehler beim Laden des Bildes: {e}")
        return None


def information_image(image_object):
    """
    Takes an image as input and returns the Format, Color-Code and the size as a dictionary.
    
    Keyword arguments:
    image_object -- loaded image object
    """
    # Pfade definieren
    input_image_path = image_object
    # Bild einlesen
    input_image = Image.open(input_image_path)
    # Dateiformat abrufen
    image_format = input_image.format
    # Farbkodierung abrufen
    image_color_code = input_image.mode
    # Bildmasse erhalten
    width, height = input_image.size
    return {
        "format" : image_format,
        "color_code" : image_color_code,
        "size [x, y]" : (width, height)
        }

# Informationen ausgeben
loaded_image = load_image("images/before/Bild2.jpg")
print(information_image(load_image))



